{
    "name": "MissClipper",
    "author": "Kotone Fami",
    "version": "0.2.1",
    "manifest_version": 3,
    "permissions": ["storage"],
    "action": {
        "default_title": "MissClipper",
        "default_popup": "popup.html"
    },
    "options_page": "options.html",
    "web_accessible_resources": [
        {
            "resources": ["*"],
            "matches": ["*://*.twitter.com/*", "*://*.x.com/*"]
        }
    ],
    "content_scripts": [
        {
            "matches": ["*://*.twitter.com/*", "*://*.x.com/*"],
            "js": ["index.content.js"],
            "run_at": "document_start"
        }
    ],
    "host_permissions": ["<all_urls>"]
}
