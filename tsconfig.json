{
    "compilerOptions": {
        "target": "ES2020",
        "module": "esnext",
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "moduleResolution": "Node",
        "strict": true,
        "noEmit": true,
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true,
        "verbatimModuleSyntax": true
    },
    "include": ["src"]
}
